<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BouquetOfPain.Controls.PercentageWithShader"
             x:Name="ThisControl">
    <ContentView.Content>
        <AbsoluteLayout>
            <BoxView BackgroundColor="{Binding ShaderBackgroundColor, Source={x:Reference ThisControl}}"
                     AbsoluteLayout.LayoutBounds="{Binding ShaderLayoutBounds, Source={x:Reference ThisControl}}"
                     AbsoluteLayout.LayoutFlags="SizeProportional" />
            <Label Text="{Binding Text, Source={x:Reference ThisControl}}"
                   HorizontalTextAlignment="Center"
                   AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="SizeProportional" />
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>