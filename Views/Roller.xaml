<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BouquetOfPain;"
             x:Class="BouquetOfPain.Views.Roller">
    <ContentPage.BindingContext>
        <vm:RollerViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Dice" />
            <Picker x:Name="Dice"
                    ItemsSource="{Binding DiceOptions}"
                    SelectedItem="{Binding SelectedDice}" />
            <Label Text="Size" />
            <Picker x:Name="Size"
                    ItemsSource="{Binding DiceSizes}"
                    SelectedItem="{Binding SelectedSize}" />
            <Button Command="{Binding Roll}"
                    Text="Roll" />
            <Label x:Name="Result" Text="{Binding Result}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>